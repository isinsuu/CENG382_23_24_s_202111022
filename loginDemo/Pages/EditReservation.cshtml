@page "{id:int}"
@model MyApp.Namespace.EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}

<style>
    h1 {
        text-align: center;
    }

    body {
        background-color: rgb(221, 233, 244);
    }

    form {
        width: 300px;
        margin: 0 auto;
        border: 2px solid #ffffff;
        padding: 20px;
        border-radius: 5px;
        background: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        border-radius: 10px;
    }

    button[type="submit"] {
        display: block;
        margin: 0 auto;
        background-color: rgb(81, 120, 220);
        border: none;
        border-radius: 8px;
    }

    #edit-btn {
        margin-top: 10px;
    }

    a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: rgb(40, 40, 134);
        text-decoration: none;
    }

    a:hover {
        text-decoration: none;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

