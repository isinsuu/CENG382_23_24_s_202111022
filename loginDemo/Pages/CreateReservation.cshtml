@page
@model MyApp.Namespace.CreateReservationModel
@{
    ViewData["Title"] = "Create Reservations";
}

<style>
    h1 {
        text-align: center;
    }

    body {
        background-color: rgb(221, 233, 244);
    }

    form {
        width: 300px;
        margin: 0 auto;
        border: 2px solid #ffffff;
        padding: 20px;
        border-radius: 5px;
        background: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    input[type="text"], input[type="number"] {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        border-radius: 10px;
    }

    button[type="submit"] {
        display: block; 
        margin: 0 auto; 
        background-color: rgb(81, 120, 220);
        border: none;
        border-radius: 8px;
    }

    #createR-btn {
        margin-top: 10px;
    }

    a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: rgb(40, 40, 134);
        text-decoration: none;
    }
    a:hover {
        text-decoration: none;
    }
</style>

<h1>Create Reservation</h1>

<form method="post">
    <div class="form-group">
        <label for="date">Start Date and Time:</label>
        <input id="date" type="datetime-local" asp-for="Reservation.DateTime" required min="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    

    <div class="form-group">
        <label for="room">Room:</label>
        <div class="select">
            <select id="room" asp-for="Reservation.RoomId" asp-items="@(new SelectList(Model.Rooms, "Id", "RoomName"))" required>
                <option value="">Select a room</option>
            </select>           
        </div>
    </div>

    <button type="submit" class="btn btn-primary" id="createR-btn">Create Reservation</button>
</form>

<a asp-page="/DisplayReservation">Display Reservations</a>
