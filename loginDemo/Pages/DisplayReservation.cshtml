@page
@model MyApp.Namespace.DisplayReservationModel
@{
    ViewData["Title"] = "Display Reservations";
}

<style>
    body {
        background-color: rgb(221, 233, 244);
    }

    .customized-tbl {
        border-collapse: collapse;
    }

    .customized-tbl th, .customized-tbl td {
        border: 1px solid #dee2e6;
    }

    .btn {
        border-radius: 8px;
        background-color: rgb(81, 120, 220);
        border: none;
    }

    #filter-btn {
        margin: 10px 0px;
    }

    h1 {
        text-align: center;
    }

    .card-header {
        using Microsoft.AspNetCore.Identity.Data;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #addRoomForm {
        margin-bottom: 0;
    }

    .card-header button {
        margin-bottom: 0;
    }

    .icon-group {
        color: rgb(81, 120, 220);
        display: inline-block;
        margin-left: 8px;
    }

    .links {
        text-decoration: none;
        border: none;
        background-color: white;
        padding: 0;
    }

    .res-info {
        display: flex;        
        align-items: center;   
        justify-content: center;
        width: 100%;            
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<h1>Reservations</h1>

<form method="get">
    <div class="filter-group">
        <label>Filter by room name: </label>
        <div class="input-group">
            <input type="text" name="roomName" placeholder="Room name" value="@Model.Request.Query["roomName"]" />
        </div>
    </div>
    <div class="filter-group">
        <label>Filter by start date:</label>
        <div class="input-group">
            <input type="date" name="startDate" placeholder="Start Date" />
        </div>
    </div>
    <div class="filter-group">
        <label>Filter by capacity:</label>
        <div class="input-group">
            <input type="number" name="capacity" placeholder="Minimum capacity" type="number" min="1" />
        </div>
    </div>

    <button type="submit" class="btn" id="filter-btn">Filter</button>
</form>

@if (Model.ReservationsList != null && Model.ReservationsList.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Reservations Weekly Schedule
            <form id="addRoomForm" method="get" action="/CreateReservation">
                <button type="submit" class="btn btn-sm btn-primary">Add Reservation</button>
            </form>
        </div>
        <div class="card-body">
            <table class="table customized-tbl">
                <thead>
                    <th>Time</th>
                    @for (var day = 0; day < 7; day++)
                    {
                        <th>@DateTime.Today.AddDays(day - (int)DateTime.Today.DayOfWeek).ToString("ddd (M/d)")</th>
                    }
                </thead>
                <tbody>
                    @for (int hour = 0; hour < 24; hour++)
                    {
                        <tr>
                            <td>@hour:00</td>
                            @for (int day = 0; day < 7; day++)
                            {
                                <td>
                                    @{
                                        var reservationsAtThisTime = Model.ReservationsList
                                        .Where(r => r.DateTime.Hour == hour && r.DateTime.DayOfWeek == (DayOfWeek)day)
                                        .ToList();
                                        foreach (var reservation in reservationsAtThisTime)
                                        {
                                            <div class="res-info">
                                                <div>@reservation.Room.RoomName</div>
                                                <div class="link-group">
                                                    <a class="links" href="/EditReservation?id=@reservation.Id">
                                                        <div class="icon-group">
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                        </div>
                                                    </a>
                                                    <form method="post" asp-page-handler="Delete" asp-route-reservationId="@reservation.Id" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                                                        <button type="submit" class="links">
                                                            <div class="icon-group">
                                                                <i class="fa-solid fa-trash"></i>
                                                            </div>
                                                        </button>
                                                    </form>
                                                    @*I implemented the delete operation but edit operation does not work, just put the icon there*@
                                                </div>
                                            </div>
                                        }
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>No reservations available.</p>
}
